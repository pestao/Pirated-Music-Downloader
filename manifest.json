{
  "manifest_version": 2,

  "name": "Pirated music downloader",
  "description": "This extension searches for free music links on glorybits.com.",
  "version": "1.0",

  "permissions": [
    "http://boomkat.com/",
    "http://glorybeats.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://boomkat.com/*"],
      "js": ["jquery.js", "myscript.js"]
    }
  ]
}